<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/hintergrund">

<LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:paddingLeft="25dp"
  android:paddingRight="25dp"
  android:orientation="vertical"
  >
  
	<TextView 
	    android:text="@string/suche" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="left|bottom"
        android:textColor="@color/standardfarbe"
        android:textStyle="bold"
        android:textSize="17dip" 
	/>
        
	<EditText
	    android:id="@+id/mannschaftName"
	    android:inputType="text"
	    android:layout_width="fill_parent"
        android:layout_height="40dp"
	/>

	<TextView 
	    android:text="@string/mannschaftErklaerung" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:textColor="@color/standardfarbe"
        android:textSize="12dip" 
	/>
		
	<Button 
    	android:id="@+id/serverYes"
        android:background="@drawable/kleingruen"
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:text="@string/serverYes"
        android:textColor="@android:color/white"
        android:textSize="15dip" 
        android:layout_marginTop="20dp"
    />
        	
    <Button 
    	android:id="@+id/serverNo"
    	android:background="@drawable/kleinrot"
    	android:layout_width="fill_parent"
    	android:layout_height="37dp"
    	android:text="@string/serverNo"
    	android:textColor="@android:color/white"
    	android:textSize="15dip" 
    	android:layout_marginTop="20dp"
    />

</LinearLayout>
</ScrollView>